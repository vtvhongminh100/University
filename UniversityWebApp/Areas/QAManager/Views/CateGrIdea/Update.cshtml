@model UniversityDao.EF.CategoryGroupIdea
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/QAManager/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @using (Html.BeginForm("Update", "CateGrIdea", FormMethod.Post))
    {
        @Html.ValidationSummary(false, "", new { @class = "text-dander" })

        <div class="card">
            <div class="card-header" style="background-color:white">
                <h4>Group category managerment</h4>
            </div>
            <div class="card-body">
                @Html.HiddenFor( m => m.CategoryGroupIdeaID)
                <div class="form-group">
                    @Html.TextBoxFor(m => m.CategoryGroupName, new { @class = "form-control", @placeholder = "Category group name" })
                </div>
                <div class="form-group">

                    @Html.TextAreaFor(m => m.CateGrIdeaDes, new { @class = "form-control", @placeholder = "Description" })
                </div>
                <div class="form-group">
                    <label class="custom-control custom-checkbox mb-2 mr-sm-2 mb-sm-0">
                        @Html.CheckBoxFor(m => m.CategoryGrIdeaSt, new { @class = "custom-control-input " })
                        <span class="custom-control-indicator"></span>
                        <span class="custom-control-description">Status</span>
                    </label>
                </div>
            </div>
            <div class="card-footer">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </div>

    }
</div>


