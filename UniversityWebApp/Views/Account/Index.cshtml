@model ModelPr.ModelViews.AccountModel
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    .mainnav {
        opacity: unset;
        background-color: #034EA2;
    }
</style>
<title>Login</title>


<div class="container row" style="width:500px;margin:5% auto auto auto;">

    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="card box-shadow" style="padding:15px">
            <div class="card-header text-center" style="border-radius:5px">
                <h3>Login to FPT Greenwich University</h3>
            </div>
            <div class="card-body" style="margin-bottom:10px">
                <div>
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                </div>
                <div class="input-group input-group-lg" style="margin-bottom:20px">
                    <span class="input-group-addon" id="sizing-addon1"><span class="fa fa-user"></span></span>
                    @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @placeholder = "Username" })
                </div>
                <div class="input-group input-group-lg">
                    <span class="input-group-addon" id="sizing-addon1"><span class="fa fa-lock"></span></span>
                    @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Password" })
                </div>
            </div>
            <div class="card-footer" style="border-radius:5px">
                <div class="form-inline row" style="margin-bottom:20px">
                    <div class="col-lg-5 form-group text-center text-lg-left">
                        <label class="custom-control custom-checkbox mb-2 mr-sm-2 mb-sm-0">
                            <input type="checkbox" class="custom-control-input">
                            <span class="custom-control-indicator"></span>
                            <span class="custom-control-description">Remember me</span>
                        </label>
                    </div>
                    <div class="col-lg-7 text-center text-lg-right" style="margin-right:-5px">
                        <span class=""><a href="#">You forgot your password?</a></span>
                    </div>
                </div>
                <div class="form-group" style="">
                    <input type="submit" class="form-control btn-primary" value="Login" />
                </div>
                <div class="form-group text-center" style="">
                    <label>You don't have an account?</label>
                    <span><a href="#">Click here to register</a></span>
                </div>
            </div>
        </div>
    }

</div>

